<div class="min-w-[400px] max-[768px]:min-w-[270px] max-[1200px]:w-[calc(50%-20px)] m-0 mr-5 mb-5 p-0 border-b-0 overflow-scroll">
  <h3 class="text-lg font-bold mt-[1em] mb-[0.5em] [&_a]:flex [&_a]:items-center [&_a]:gap-[10px] [&_a]:p-[10px] [&_a]:transition-[0.25s] [&_a:hover]:no-underline [&_a:hover]:bg-[rgba(255,255,255,0.75)] [&_a_span]:flex-1 max-[768px]:[&_a]:p-0 max-[768px]:[&_a]:py-[10px]">
    <%= link_to channel_path(channel) do %>
      <% if channel.image_url %>
        <div class="relative h-16 overflow-hidden [&_img]:h-full [&_img]:object-contain">
          <%= image_tag(channel.image_url) %>
        </div>
      <% end %>
      <span>
        <%= channel.title %>
      </span>
    <% end %>
  </h3>
  <ul class="my-2 mx-0 [&_li_a]:relative [&_li_a]:flex [&_li_a]:flex-wrap [&_li_a]:m-0 [&_li_a]:py-3 [&_li_a]:px-[10px] [&_li_a]:border-t [&_li_a]:border-t-[#dddddd] [&_li_a]:border-t-[0.5px] [&_li_a]:leading-6 [&_li_a]:transition-[0.25s] [&_li_a:hover]:no-underline [&_li_a:hover]:bg-[rgba(255,255,255,0.75)] max-[768px]:[&_li_a]:p-0 max-[768px]:[&_li_a]:py-4">
    <% channel.recent_items.each do |item| %>
      <%= turbo_frame_tag(item) do %>
      <li>
      <%= link_to(item.url, target: "_blank") do %>
        <div class="relative w-24 h-16 mr-[10px] overflow-hidden max-[1200px]:w-24 max-[1200px]:h-16 max-[1200px]:mr-[10px]">
          <div class="relative w-full h-full flex items-center justify-center bg-center bg-cover bg-no-repeat overflow-hidden before:content-[''] before:absolute before:top-0 before:left-0 before:w-full before:h-full before:bg-[inherit] before:blur-[10px] before:scale-110 before:z-[1] [&_img]:relative [&_img]:z-[2] [&_img]:w-full [&_img]:h-full [&_img]:object-contain" style="background-image: url('<%= item.image_url_or_placeholder %>')">
            <%= image_tag(item.image_url_or_placeholder) %>
          </div>
        </div>
        <div class="w-[calc(100%-106px)] m-0 max-[1200px]:w-[calc(100%-106px)] max-[1200px]:m-0">
          <h4 class="font-bold">
            <%= item.title %>
          </h4>
          <%= item.published_at.strftime("%Y-%m-%d %H:%M") %>
        </div>
        <% if item.audio_enclosure_url %>
          <div class="audio-player w-full mt-2 -mb-2">
            <audio class="h-9" style="width: 100%;" src="<%= item.audio_enclosure_url %>" controls controlslist="nodownload"></audio>
          </div>
        <% end %>
      <% end %>
      </li>
      <% end %>
    <% end %>
  </ul>
</div>
