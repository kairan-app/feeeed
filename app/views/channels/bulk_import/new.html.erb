<h2 class="text-2xl font-bold mt-6">Bulk Feed Import</h2>

<%= form_with url: channels_bulk_import_path, local: true do |f| %>
  <div class="mb-4">
    <h3 class="text-lg font-semibold mb-2">Method 1: Enter URL list</h3>
    <p class="text-sm text-gray-600 mb-2">Enter feed URLs separated by line breaks (maximum 100 feeds)</p>
    <%= f.text_area :urls, rows: 10, class: "w-full p-2 border rounded",
        placeholder: "https://example.com/feed.xml\nhttps://blog.example.com/rss\n..." %>
  </div>

  <div class="mb-4">
    <h3 class="text-lg font-semibold mb-2">Method 2: Upload OPML file</h3>
    <p class="text-sm text-gray-600 mb-2">Select an OPML file exported from other feed readers</p>
    <%= f.file_field :opml_file, accept: ".opml,.xml", class: "w-full p-2 border rounded" %>
  </div>

  <%= f.submit "Start Bulk Import", class: "p-2 border border-slate-500 rounded-xs bg-slate-100 hover:bg-slate-200 cursor-pointer" %>
<% end %>

<p class="mt-4">
  <%= link_to "← Back to normal add", root_path, class: "text-blue-600 hover:underline" %>
</p>

<div class="mt-6 p-4 bg-gray-100 rounded">
  <h4 class="font-semibold mb-2">Notes</h4>
  <ul class="list-disc list-inside text-sm">
    <li>Maximum 100 feeds can be imported at once</li>
    <li>Processing may take some time</li>
    <li>You will be notified by email with the results</li>
    <li>Duplicate feeds will be automatically skipped</li>
  </ul>
</div>
