<% if logged_in? %>
  <% if channel.subscribed_by?(current_user) %>
    <%= link_to("Subscribed", channel_subscription_path(channel), data: { turbo_method: :delete }, class: "block mr-2 max-md:mr-0 max-md:w-full max-md:mb-2 max-md:text-center px-4 py-2 bg-[#555555] text-white border border-[#555555] rounded cursor-pointer hover:bg-[#777777]") %>
  <% else %>
    <%= link_to("Subscribe", channel_subscription_path(channel), data: { turbo_method: :post }, class: "block mr-2 max-md:mr-0 max-md:w-full max-md:mb-2 max-md:text-center px-4 py-2 bg-white text-[#333333] border border-[#cccccc] rounded cursor-pointer hover:bg-[#fafafa] hover:border-[#999999]") %>
  <% end %>
<% end %>
