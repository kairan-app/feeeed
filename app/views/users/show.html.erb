
<div class="profile flex flex-wrap w-full items-center my-8">
  <div class="profile-image w-24 h-24 lg:w-32 lg:h-32 mr-5 [&_img]:w-full [&_img]:h-full [&_img]:object-cover [&_img]:rounded-full">
    <%= user_avatar_tag(@user, size: :thumb) %>
  </div>
  <div class="profile-info">
    <h2 class="text-2xl font-bold mt-6 mb-4"><%= "@" + @user.name %></h2>
  </div>
</div>

<% if @channel_groups.exists? %>
<h3 class="text-lg font-bold">Channel Groups</h3>
<ul class="list-none p-0">
  <% @channel_groups.each do |channel_group| %>
    <li><%= link_to(channel_group.name, channel_group) %></li>
  <% end %>
</ul>
<% end %>

<% if @owned_channels.exists? %>
<h3 class="text-lg font-bold">Owned Channels</h3>
<%= render(partial: "channels/grid_cards", locals: { channels: @owned_channels }) %>
<% end %>

<% if @subscribed_channels.exists? %>
<h3 class="text-lg font-bold">Subscribed Channels</h3>
<%= render(partial: "channels/grid_cards", locals: { channels: @subscribed_channels }) %>
<% end %>
