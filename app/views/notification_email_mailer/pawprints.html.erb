<h1>Your recent pawprints!</h1>

<table cellpadding="0" cellspacing="0" style="margin-bottom: 20px;">
  <tr>
    <td style="vertical-align: middle; padding-right: 10px;">
      <img src="<%= @user.avatar_url(variant: :thumb) %>" alt="@<%= @user.name %>" width="48" height="48" style="border-radius: 50%;">
    </td>
    <td style="vertical-align: middle;">
      <p style="margin: 0;">Hi, @<%= @user.name %>!</p>
    </td>
  </tr>
</table>

<% @pawprints.sort_by(&:id).each do |pawprint| %>
  <hr style="border: none; border-top: 1px solid #eee; margin: 16px 0;">
  <table cellpadding="0" cellspacing="0" style="margin-bottom: 16px; width: 100%;">
    <tr>
      <% if pawprint.item.image_url.present? %>
        <td style="vertical-align: top; padding-right: 12px; width: 80px;">
          <a href="<%= pawprint.item.url %>">
            <img src="<%= pawprint.item.image_url %>" alt="" width="80" style="border-radius: 4px; display: block;">
          </a>
        </td>
      <% end %>
      <td style="vertical-align: top;">
        <p style="margin: 0 0 4px 0;">
          <strong><%= link_to pawprint.item.title, pawprint.item.url %></strong>
        </p>
        <p style="margin: 0 0 4px 0; font-size: 12px; color: #666;">
          <img src="<%= pawprint.item.channel.favicon_url %>" alt="" width="12" height="12" style="vertical-align: middle; margin-right: 4px;"><%= link_to pawprint.item.channel.title, pawprint.item.channel.site_url, style: "color: #666; text-decoration: none;" %>
        </p>
        <% if pawprint.memo.present? %>
          <p style="margin: 0 0 4px 0; color: #666;">
            ðŸ’¬ <%= pawprint.memo %>
          </p>
        <% end %>
        <p style="margin: 0; color: #999; font-size: 12px;">
          <%= pawprint.created_at.strftime("%Y-%m-%d %H:%M") %>
        </p>
      </td>
    </tr>
  </table>
<% end %>
