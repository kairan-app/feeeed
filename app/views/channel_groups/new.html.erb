<section>
  <h2 class="text-2xl font-bold mt-6 mb-4">New Channel Group</h2>
  <%= form_for(@channel_group, url: channel_groups_path) do |form| %>
    <%= form.text_field(:name, placeholder: "Name", class: "w-[400px]") %>
    <%= form.submit("Create", class: "p-2 border border-slate-500 rounded-xs bg-slate-100 hover:bg-slate-200 cursor-pointer") %>
  <% end %>
</section>
