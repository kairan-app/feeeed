<header class="md:hidden fixed top-0 left-0 right-0 flex items-center justify-between h-14 px-4 bg-white border-b border-gray-200 z-50">
  <%= link_to image_tag("logo.svg", class: "w-[100px] h-auto"), root_path, class: "leading-none" %>
  <% if logged_in? %>
    <%= link_to(user_path(user_name: current_user.name)) do %>
      <%= user_avatar_tag(current_user, size: :small) %>
    <% end %>
  <% else %>
    <%= link_to "Login", login_path, class: "inline-flex items-center px-3 py-1.5 border border-gray-300 rounded-md text-sm font-medium text-gray-700 bg-white hover:bg-gray-50" %>
  <% end %>
</header>
