<div id="<%= dom_id(profile_widget) %>" class="flex items-center gap-2 p-2 bg-gray-50 rounded">
  <div class="flex flex-col gap-0.5 w-4 h-8 justify-center">
    <% if is_first %>
      <span class="text-xs leading-none invisible">&uarr;</span>
    <% else %>
      <%= button_to move_up_my_profile_widget_path(profile_widget), class: "text-gray-400 hover:text-gray-600 text-xs leading-none" do %>
        &uarr;
      <% end %>
    <% end %>
    <% if is_last %>
      <span class="text-xs leading-none invisible">&darr;</span>
    <% else %>
      <%= button_to move_down_my_profile_widget_path(profile_widget), class: "text-gray-400 hover:text-gray-600 text-xs leading-none" do %>
        &darr;
      <% end %>
    <% end %>
  </div>

  <span class="flex-grow font-medium"><%= profile_widget.position + 1 %>. <%= profile_widget.widget_type.titleize %></span>

  <div class="flex items-center gap-1">
    <%= button_to my_profile_widget_path(profile_widget),
        method: :delete,
        class: "text-gray-400 hover:text-red-600 material-symbols-outlined text-lg",
        data: { turbo_confirm: "Are you sure you want to remove this widget?" } do %>
      delete
    <% end %>
  </div>
</div>
