<section>
  <h2 class="text-2xl font-bold mt-6 mb-4">Edit Tag</h2>

  <%= form_with model: @subscription_tag, url: my_subscription_tag_path(@subscription_tag), method: :patch, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, "Tag Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, class: "px-3 py-2 border border-gray-300 rounded w-64", required: true, maxlength: 32, autofocus: true %>
    </div>

    <div class="flex gap-2">
      <%= f.submit "Save", class: "px-4 py-2 bg-blue-500 text-white rounded hover:bg-blue-600 cursor-pointer" %>
      <%= link_to "Cancel", my_subscriptions_path, class: "px-4 py-2 border border-gray-300 rounded hover:bg-gray-50" %>
    </div>
  <% end %>
</section>
