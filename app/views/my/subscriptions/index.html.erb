<section>
  <h2 class="text-2xl font-bold mt-6 mb-4">My Subscriptions</h2>

  <%# Tags Section %>
  <div class="mb-8">
    <h3 class="text-lg font-semibold mb-3">Tags</h3>

    <div id="subscription-tags-list" class="space-y-2 mb-4">
      <%= render "subscription_tags_list", subscription_tags: @subscription_tags %>
    </div>

    <%= form_with url: my_subscription_tags_path, scope: :subscription_tag, class: "flex gap-2 items-center" do |f| %>
      <%= f.text_field :name, placeholder: "New tag name", class: "px-3 py-2 border border-gray-300 rounded w-48", required: true, maxlength: 32 %>
      <%= f.submit "Add Tag", class: "px-4 py-2 border border-slate-500 rounded-xs bg-slate-100 hover:bg-slate-200 cursor-pointer" %>
    <% end %>
  </div>

  <%# Subscriptions Section %>
  <div>
    <h3 class="text-lg font-semibold mb-3">Subscriptions (<%= @subscriptions.size %>)</h3>

    <div id="subscriptions-list" class="space-y-3">
      <% @subscriptions.each do |subscription| %>
        <%= render "subscription", subscription: subscription, subscription_tags: @subscription_tags %>
      <% end %>
    </div>

    <% if @subscriptions.empty? %>
      <p class="text-gray-500">No subscriptions yet.</p>
    <% end %>
  </div>
</section>
