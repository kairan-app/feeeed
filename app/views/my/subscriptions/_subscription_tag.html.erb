<div id="<%= dom_id(subscription_tag) %>" class="flex items-center gap-2 p-2 bg-gray-50 rounded" data-subscription-tag-id="<%= subscription_tag.id %>">
  <div class="flex flex-col gap-0.5 w-4">
    <% unless is_first %>
      <%= button_to move_up_my_subscription_tag_path(subscription_tag), class: "text-gray-400 hover:text-gray-600 text-xs leading-none" do %>
        &uarr;
      <% end %>
    <% end %>
    <% unless is_last %>
      <%= button_to move_down_my_subscription_tag_path(subscription_tag), class: "text-gray-400 hover:text-gray-600 text-xs leading-none" do %>
        &darr;
      <% end %>
    <% end %>
  </div>

  <span class="flex-grow font-medium"><%= subscription_tag.position + 1 %>. <%= subscription_tag.name %></span>

  <span class="text-sm text-gray-500">
    <%= subscription_tag.subscriptions.count %> subscriptions
  </span>

  <%= button_to my_subscription_tag_path(subscription_tag),
      method: :delete,
      class: "text-red-600 hover:text-red-800 text-sm",
      data: { turbo_confirm: "Are you sure you want to delete this tag?" } do %>
    Delete
  <% end %>
</div>
