<div id="<%= dom_id(subscription_tag) %>" class="flex items-center gap-2 p-2 bg-gray-50 rounded" data-subscription-tag-id="<%= subscription_tag.id %>">
  <span class="drag-handle cursor-move text-gray-400">&#9776;</span>

  <span class="flex-grow font-medium"><%= subscription_tag.name %></span>

  <span class="text-sm text-gray-500">
    <%= subscription_tag.subscriptions.count %> subscriptions
  </span>

  <%= button_to my_subscription_tag_path(subscription_tag),
      method: :delete,
      class: "text-red-600 hover:text-red-800 text-sm",
      data: { turbo_confirm: "Are you sure you want to delete this tag?" } do %>
    Delete
  <% end %>
</div>
